
<main class="main">

  <div class="inner">
  <h1>トップページ</h1>
    <% if user_signed_in? %>
         <div class="tile_table">
          <%= link_to albums_path do %>
          <div class="tile">
            <div class="tile_content">
              <%= image_tag "icon_album.png"%>
              <%= "アルバム一覧" %>
            </div>
          </div>
        　<% end %>

          <%= link_to items_path do %>
          <div class="tile">
            <div class="tile_content">
              <%= image_tag "icon_item.png"%>
              <%= "アイテム一覧" %>
            </div>
          </div>
          <% end %>

          <%= link_to genres_path do %>
          <div class="tile">
            <div class="tile_content">
              <%= image_tag "icon_genre.png"%>
              <%= "ジャンル一覧" %>
            </div>
          </div>
          <% end %>

        </div>

    <% end %>
  </div>
