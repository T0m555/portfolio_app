<h1>アイテム一覧</h1>

<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
         こんにちは、 
         <%= link_to " #{current_user.name} さん", root_path, class: :greeting__link%>
       </div>
              <%= link_to "アイテム新規作成", new_item_path, class: :nav__btn %>
              <%= link_to "トップページへ戻る", root_path, class: :nav__btn %> 
       <div>
       </div>
    <% end %>
    <%= "#{current_user.name}さんのアイテム一覧" %>
    <div class="background">

    <% if @items == [] %>
    <% else %>
        <% @items.each do |item| %>
          <div class="card">
              <%= link_to item.title, item_path(item.id), method: :get %>
          </div>
        <% end %>
    <% end %>

    </div>
  </div>
</main>